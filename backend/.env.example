EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@sloth.com

# Sentry (Production)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
